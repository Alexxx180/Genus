<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="PATTERN">%d{yyyy-MM-dd HH:mm:ss} [%t] [%-5level] %logger{36} - %msg%n</Property>
    </Properties>
    <Appenders>
        <File name = "File" fileName="src/main/resources/Logs/Debug.log" append="false" locking="true" immediateFlush="true" ignoreExceptions="false" bufferedIo="false" advertise="false">
            <PatternLayout pattern="${PATTERN}"/>
        </File>
        <File name = "File2" fileName="src/main/resources/Logs/Info.log" append="false" locking="true" immediateFlush="true" ignoreExceptions="false" bufferedIo="false" advertise="false">
            <PatternLayout pattern="${PATTERN}"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="File" level="debug" />
            <AppenderRef ref="File2" level="info" />
        </Root>
    </Loggers>
</Configuration>